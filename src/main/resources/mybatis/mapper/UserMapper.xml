<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.danao.springboot_learing.mapper.UserMapper">

    <!-- 设置 resultset 映射关系 -->
    <resultMap id="userResult" type="cn.danao.springboot_learing.dao.User">
        <id column="id" property="id"/>
        <result column="username" property="userName"/>
        <result column="password" property="password"/>
    </resultMap>

    <!-- 新增 -->
    <insert id="insert" parameterType="cn.danao.springboot_learing.dao.User">
        INSERT INTO user (id, name, age) VALUES (#{id}, #{name}, #{age})
    </insert>

    <!-- 删除 -->
    <delete id="delete" parameterType="int">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <!-- 更新 -->
    <update id="update" parameterType="cn.danao.springboot_learing.dao.User">
        UPDATE user SET name = #{name}, age = #{age} WHERE id = #{id}
    </update>

    <!-- 查询 根据主键 id 查询 -->
    <select id="load" parameterType="int" resultType="cn.danao.springboot_learing.dao.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <!-- 查询 分页查询 -->
    <select id="pageList" parameterType="map" resultType="cn.danao.springboot_learing.dao.User">
        SELECT * FROM user LIMIT #{offset}, #{pagesize}
    </select>

    <!-- 查询 分页查询 count -->
    <select id="pageListCount" parameterType="map" resultType="int">
        SELECT COUNT(*) FROM user
    </select>

</mapper>